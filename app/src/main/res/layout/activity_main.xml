<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_weight="3"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ansId"
            android:textColor="@color/white"
            android:background="@color/blac"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="1888"
            android:gravity="bottom|end"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/workSpaceId"
            android:textColor="@color/white"
            android:background="@color/blac"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="1888"
            android:gravity="center_vertical|end"
            android:padding="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="-"
                android:id="@+id/minusId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="("
                android:id="@+id/openBracId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text=")"
                android:id="@+id/closebrackId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num2"
                android:textSize="30sp"
                android:text="+"
                android:id="@+id/plusId"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="7"
                android:id="@+id/sevenId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="8"
                android:id="@+id/eightId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="9"
                android:id="@+id/nineId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num2"
                android:textSize="30sp"
                android:text="/"
                android:id="@+id/divideId"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="4"
                android:id="@+id/fourId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="5"
                android:id="@+id/fiveId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="6"
                android:id="@+id/sixId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num2"
                android:textSize="30sp"
                android:text="*"
                android:id="@+id/mulId"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="1"
                android:id="@+id/oneId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="2"
                android:id="@+id/twoId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="3"
                android:id="@+id/three"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num2"
                android:textSize="30sp"
                android:text="%"
                android:id="@+id/modId"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="C"
                android:id="@+id/Cid"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="0"
                android:id="@+id/zeroId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_num"
                android:textSize="30sp"
                android:text="."
                android:id="@+id/dotId"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_but"
                android:textSize="30sp"
                android:text="="
                android:id="@+id/equalId"
                android:textColor="@color/white"/>
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>